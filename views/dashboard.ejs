<%- include('partials/header') %>
    <div class="max-w-4xl mx-auto w-full py-10 px-4">
        <div class="bg-white rounded-2xl shadow-xl border border-slate-100 overflow-hidden mb-8">
            <div class="bg-slate-900 px-8 py-6 flex items-center justify-between">
                <div>
                    <h1 class="text-2xl font-bold text-white">Dashboard</h1>
                    <p class="text-slate-400 text-sm mt-1">Manage your identity and connected apps</p>
                </div>
                <div
                    class="h-12 w-12 bg-teal-600 rounded-full flex items-center justify-center text-white font-bold text-xl ring-4 ring-slate-800">
                    <%= user.email.charAt(0).toUpperCase() %>
                </div>
            </div>

            <div class="p-8">
                <div class="grid md:grid-cols-2 gap-8">
                    <div>
                        <h2 class="text-lg font-bold text-slate-900 mb-4 flex items-center gap-2">
                            <svg class="w-5 h-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            Profile Information
                        </h2>
                        <div class="bg-slate-50 rounded-xl p-6 border border-slate-100 space-y-4">
                            <div>
                                <label
                                    class="text-xs font-semibold text-slate-500 uppercase tracking-wider block mb-1">Keyra
                                    ID</label>
                                <p
                                    class="text-slate-900 font-mono text-sm bg-white border border-slate-200 rounded px-2 py-1 inline-block">
                                    <%= user.email %>
                                </p>
                            </div>
                            <div>
                                <label
                                    class="text-xs font-semibold text-slate-500 uppercase tracking-wider block mb-1">User
                                    ID</label>
                                <p class="text-slate-500 font-mono text-xs">
                                    <%= user.id %>
                                </p>
                            </div>
                            <div>
                                <label
                                    class="text-xs font-semibold text-slate-500 uppercase tracking-wider block mb-1">Status</label>
                                <span
                                    class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    <span class="w-1.5 h-1.5 rounded-full bg-green-600"></span>
                                    Active
                                </span>
                            </div>
                        </div>
                    </div>

                    <div>
                        <h2 class="text-lg font-bold text-slate-900 mb-4 flex items-center gap-2">
                            <svg class="w-5 h-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z">
                                </path>
                            </svg>
                            Activity
                        </h2>
                        <div class="bg-slate-50 rounded-xl p-6 border border-slate-100 text-center">
                            <div
                                class="w-12 h-12 bg-white rounded-lg flex items-center justify-center mx-auto mb-3 text-slate-300 shadow-sm">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <p class="text-slate-500 text-sm">No recent activity found.</p>
                            <a href="/oauth/authorize?client_id=demo&redirect_uri=/dashboard&response_type=code"
                                class="inline-block mt-4 text-sm text-teal-600 hover:text-teal-700 font-medium">
                                Test OAuth Flow &rarr;
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>