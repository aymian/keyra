<%- include('partials/header') %>
    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl border border-slate-100 overflow-hidden">
        <div class="p-8">
            <div class="text-center mb-8">
                <a href="/"
                    class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-teal-600 text-white font-bold text-2xl shadow-lg mb-4">
                    K
                </a>
                <h2 class="text-2xl font-bold text-slate-900">Sign in to Keyra</h2>
                <p class="text-sm text-slate-500 mt-2">Welcome back! Please enter your details.</p>
            </div>

            <% if (typeof error !=='undefined' && error) { %>
                <div
                    class="bg-red-50 text-red-600 p-4 rounded-lg text-sm mb-6 border border-red-100 flex items-center gap-2">
                    <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <%= error %>
                </div>
                <% } %>

                    <form action="/auth/login" method="POST" class="space-y-5">
                        <% if (typeof returnTo !=='undefined' && returnTo) { %>
                            <input type="hidden" name="returnTo" value="<%= returnTo %>">
                            <% } %>

                                <div>
                                    <label for="username"
                                        class="block text-sm font-medium text-slate-700 mb-1">Username</label>
                                    <div class="relative flex items-center">
                                        <input type="text" id="username" name="username" required
                                            class="w-full pl-4 pr-32 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-teal-500 focus:border-teal-500 outline-none transition-all placeholder-slate-400"
                                            placeholder="username">
                                        <div
                                            class="absolute right-0 top-0 bottom-0 px-4 bg-slate-100 border-l border-slate-300 rounded-r-lg flex items-center text-slate-500 font-medium select-none">
                                            @keyra-production-a826.up.railway.app
                                        </div>
                                    </div>
                                </div>

                                <div>
                                    <label for="password"
                                        class="block text-sm font-medium text-slate-700 mb-1">Password</label>
                                    <input type="password" id="password" name="password" required
                                        class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-teal-500 focus:border-teal-500 outline-none transition-all placeholder-slate-400"
                                        placeholder="••••••••">
                                </div>

                                <button type="submit"
                                    class="w-full bg-teal-600 text-white font-semibold py-3 px-4 rounded-lg hover:bg-teal-500 transition-colors shadow-lg hover:shadow-teal-500/20 focus:ring-4 focus:ring-teal-500/30">
                                    Sign in
                                </button>
                    </form>

                    <div class="relative my-6">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-slate-200"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-white text-slate-500">Or continue with</span>
                        </div>
                    </div>

                    <button type="button" onclick="startPasskeyLogin()"
                        class="w-full flex justify-center items-center gap-2 bg-white text-slate-700 font-semibold py-3 px-4 rounded-lg border border-slate-300 hover:bg-slate-50 transition-colors focus:ring-4 focus:ring-slate-100">
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                        </svg>
                        Sign in with Passkey
                    </button>
                    <p id="passkey-error" class="text-sm text-red-500 mt-2 text-center hidden"></p>
        </div>
        <div class="px-8 py-4 bg-slate-50 border-t border-slate-100 text-center">
            <p class="text-sm text-slate-600">
                Don't have an account?
                <a href="/auth/signup<%= typeof returnTo !== 'undefined' ? '?returnTo=' + encodeURIComponent(returnTo) : '' %>"
                    class="font-medium text-teal-600 hover:text-teal-500">Sign up</a>
            </p>
        </div>
    </div>

    <script src="https://unpkg.com/@simplewebauthn/browser/dist/bundle/index.umd.min.js"></script>
    <script>
        const { startAuthentication } = SimpleWebAuthnBrowser;

        async function startPasskeyLogin() {
            const errorEl = document.getElementById('passkey-error');
            errorEl.classList.add('hidden');
            errorEl.textContent = '';

            try {
                // 1. Get challenge from server
                const resp = await fetch('/login/public-key/challenge', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                if (!resp.ok) throw new Error('Failed to get challenge');
                const options = await resp.json();

                // 2. Ask browser for credential
                const authResp = await startAuthentication(options.challenge);

                // 3. Send to server for verification
                const verifyResp = await fetch('/login/public-key', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(authResp)
                });

                const verificationJSON = await verifyResp.json();

                if (verificationJSON.success) {
                    window.location.href = verificationJSON.redirect || '/developers';
                } else {
                    throw new Error(verificationJSON.error || 'Authentication failed');
                }
            } catch (err) {
                console.error(err);
                errorEl.textContent = err.message || 'Failed to authenticate with Passkey';
                errorEl.classList.remove('hidden');
            }
        }
    </script>
    <%- include('partials/footer') %>