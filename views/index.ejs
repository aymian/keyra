<%- include('partials/header') %>
    <div class="text-center max-w-2xl mx-auto py-12">
        <div class="mb-8 flex justify-center">
            <div
                class="w-16 h-16 rounded-xl bg-teal-600 flex items-center justify-center text-white font-bold text-4xl shadow-2xl">
                K
            </div>
        </div>
        <h1 class="text-4xl md:text-5xl font-extrabold text-slate-900 mb-6 tracking-tight">
            One account to access <br class="hidden md:block" />
            <span class="text-teal-600">everything you trust.</span>
        </h1>
        <p class="text-lg text-slate-600 mb-10 leading-relaxed">
            Keyra provides secure, seamless authentication for modern applications.
            Sign in once and access your favorite services with peace of mind.
        </p>

        <% if (typeof user !=='undefined' && user) { %>
            <div class="bg-white p-8 rounded-2xl shadow-xl border border-slate-100">
                <p class="text-lg font-medium text-slate-900 mb-2">Welcome back!</p>
                <p class="text-slate-500 mb-6">
                    <%= user.email %>
                </p>
                <a href="/developers"
                    class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-teal-700 bg-teal-100 hover:bg-teal-200 transition-colors">
                    Manage Developer Apps
                </a>
            </div>
            <% } else { %>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="/auth/signup"
                        class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-slate-900 hover:bg-slate-800 shadow-lg hover:shadow-xl transition-all duration-200">
                        Get Started
                    </a>
                    <a href="/auth/login"
                        class="inline-flex items-center justify-center px-8 py-3 border border-slate-200 text-base font-medium rounded-lg text-slate-700 bg-white hover:bg-slate-50 hover:border-slate-300 transition-all duration-200">
                        Sign In
                    </a>
                </div>
                <% } %>

                    <div class="mt-20 grid grid-cols-1 md:grid-cols-3 gap-8 text-left">
                        <div class="p-6 bg-white rounded-xl shadow-sm border border-slate-100">
                            <div
                                class="w-10 h-10 bg-teal-100 rounded-lg flex items-center justify-center mb-4 text-teal-600">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                                    </path>
                                </svg>
                            </div>
                            <h3 class="font-bold text-slate-900 mb-2">Bank-grade Security</h3>
                            <p class="text-sm text-slate-500">Built on top of Supabase Auth, ensuring your data is
                                encrypted and protected.</p>
                        </div>
                        <div class="p-6 bg-white rounded-xl shadow-sm border border-slate-100">
                            <div
                                class="w-10 h-10 bg-teal-100 rounded-lg flex items-center justify-center mb-4 text-teal-600">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                </svg>
                            </div>
                            <h3 class="font-bold text-slate-900 mb-2">Lightning Fast</h3>
                            <p class="text-sm text-slate-500">Optimized for speed with minimal redirects and low latency
                                authentication flows.</p>
                        </div>
                        <div class="p-6 bg-white rounded-xl shadow-sm border border-slate-100">
                            <div
                                class="w-10 h-10 bg-teal-100 rounded-lg flex items-center justify-center mb-4 text-teal-600">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                                </svg>
                            </div>
                            <h3 class="font-bold text-slate-900 mb-2">Developer Friendly</h3>
                            <p class="text-sm text-slate-500">Standard OAuth 2.1 implementation makes integrating with
                                Keyra a breeze.</p>
                        </div>
                    </div>
    </div>
    <%- include('partials/footer') %>