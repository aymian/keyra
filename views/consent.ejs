<%- include('partials/header') %>
    <div class="w-full max-w-lg bg-white rounded-2xl shadow-xl border border-slate-100 overflow-hidden">
        <div class="p-8">
            <div class="flex items-center justify-center gap-8 mb-8">
                <div
                    class="w-16 h-16 rounded-xl bg-teal-600 flex items-center justify-center text-white font-bold text-3xl shadow-lg">
                    K
                </div>
                <!-- Arrow Icon -->
                <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3">
                    </path>
                </svg>

                <div
                    class="w-16 h-16 rounded-xl bg-slate-100 flex items-center justify-center text-slate-600 font-bold text-2xl border-2 border-slate-200">
                    ?
                </div>
            </div>

            <div class="text-center mb-8">
                <h2 class="text-2xl font-bold text-slate-900 mb-2">Authorize <span class="text-teal-700">
                        <%= client_name || 'Application' %>
                    </span></h2>
                <p class="text-slate-600">
                    <span class="font-medium text-slate-900">
                        <%= user.email %>
                    </span>,
                    do you want to allow this app to access your information?
                </p>
            </div>

            <div class="bg-slate-50 rounded-lg p-5 mb-8 border border-slate-100">
                <h3 class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-4">Requested Access</h3>
                <ul class="space-y-3">
                    <% if (scope.includes('email')) { %>
                        <li class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-teal-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor"
                                viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                                </path>
                            </svg>
                            <span class="text-sm text-slate-700">View your email address</span>
                        </li>
                        <% } %>
                            <% if (scope.includes('profile')) { %>
                                <li class="flex items-start gap-3">
                                    <svg class="w-5 h-5 text-teal-600 flex-shrink-0 mt-0.5" fill="none"
                                        stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z">
                                        </path>
                                    </svg>
                                    <span class="text-sm text-slate-700">View your basic profile info</span>
                                </li>
                                <% } %>
                                    <!-- Fallback if no specific scopes matched but scope exists -->
                                    <% if (!scope.includes('email') && !scope.includes('profile') && scope.trim() !==''
                                        ) { %>
                                        <li class="flex items-start gap-3">
                                            <svg class="w-5 h-5 text-teal-600 flex-shrink-0 mt-0.5" fill="none"
                                                stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                                                </path>
                                            </svg>
                                            <span class="text-sm text-slate-700">Info: <span
                                                    class="font-mono bg-white px-1 rounded border">
                                                    <%= scope %>
                                                </span></span>
                                        </li>
                                        <% } %>
                </ul>
            </div>

            <form action="/oauth/decision" method="POST" class="flex flex-col gap-3">
                <input type="hidden" name="transaction_id" value="<%= transaction_id %>">
                <input type="hidden" name="client_id" value="<%= client_id %>">
                <input type="hidden" name="scope" value="<%= scope %>">
                <input type="hidden" name="redirect_uri" value="<%= redirect_uri %>">
                <input type="hidden" name="state" value="<%= state %>">

                <button type="submit" name="decision" value="allow"
                    class="w-full bg-teal-600 text-white font-bold py-3 px-4 rounded-lg hover:bg-teal-500 transition-colors shadow-lg hover:shadow-teal-500/20 text-lg">
                    Continue
                </button>
                <button type="submit" name="decision" value="deny"
                    class="w-full bg-white text-slate-700 font-semibold py-3 px-4 rounded-lg border border-slate-200 hover:bg-slate-50 transition-colors">
                    Cancel
                </button>
            </form>
        </div>
        <div class="px-8 py-4 bg-slate-50 border-t border-slate-100 text-center">
            <p class="text-xs text-slate-500">
                By clicking Continue, you agree to share the above data with <span class="font-medium text-slate-700">
                    <%= client_name || 'the app' %>
                </span>.
            </p>
        </div>
    </div>
    <%- include('partials/footer') %>