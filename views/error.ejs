<%- include('partials/header') %>
    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl border border-slate-100 overflow-hidden text-center p-8">
        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6 text-red-600">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z">
                </path>
            </svg>
        </div>

        <h2 class="text-2xl font-bold text-slate-900 mb-2">Oops! Something went wrong</h2>

        <p class="text-slate-600 mb-8">
            <%= typeof error !=='undefined' ? error : 'An unexpected error occurred.' %>
        </p>

        <div class="flex flex-col gap-3">
            <a href="/"
                class="w-full bg-teal-600 text-white font-semibold py-3 px-4 rounded-lg hover:bg-teal-500 transition-colors shadow-lg hover:shadow-teal-500/20">
                Return Home
            </a>
            <button onclick="window.history.back()"
                class="w-full bg-white text-slate-700 font-semibold py-3 px-4 rounded-lg border border-slate-200 hover:bg-slate-50 transition-colors">
                Go Back
            </button>
        </div>
    </div>
    <%- include('partials/footer') %>